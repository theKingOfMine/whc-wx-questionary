<view class="user-container">
  <!-- 头像 -->
  <view class="user-info-box">
    <view class="user-image-box">
      <view bindtap="teacherUpdate" class="head_image" style="background-image: url({{image.logo}});background-size: cover;">
      </view>
      <view class="user-name">
        {{teacher.name}}-{{teacher.position}}
      </view>
    </view>
  </view>
  <!-- 数据 -->
  <view class="user-workinfo-box">
    <view class="wrapper">
      <view class="layer-1"></view>
      <view class="layer-2"></view>
      <view class="layer-3">
        <DataExhibition></DataExhibition>
      </view>
    </view>
  </view>
</view>