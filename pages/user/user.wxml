<view class="user-container">
  <!-- 头像 -->
  <view class="user-info-box">
    <view class="user-image-box">
      <view class="head_image" style="background-image: url({{image.logo}});background-size: cover;">
      </view>
      <view class="user-name">
        马吉春-AI Music
      </view>
    </view>
  </view>
  <!-- 数据 -->
  <view class="user-workinfo-box">
    <view class="wrapper">
      <view class="layer-1"></view>
      <view class="layer-2"></view>
      <view class="layer-3">
        <!-- 个人操作 -->
        <t-cell title="权限管理" bordered="{{false}}">
          <t-switch defaultValue="{{true}}" slot="note" />
        </t-cell>
        <!-- 重要信息数字展示 -->
        <view class="information-box">
          <view class="data-show">
            <view class="data">
              52
            </view>
            <view class="describe">
              学生总数
            </view>
          </view>
          <view class="data-show">
            <view class="data">
              12
            </view>
            <view class="describe">
              已完成学生
            </view>
          </view>
          <view class="data-show">
            <view class="data">
              32
            </view>
            <view class="describe">
              未完成学生
            </view>
          </view>
        </view>
        <!-- 数据表 -->
        <t-tabs style="width: 100%; margin-top: 32rpx;" defaultValue="{{0}}" t-class="custom-tabs">
          <t-tab-panel label="数据统计" value="0" class="panel">
            <BarChart></BarChart>
          </t-tab-panel>
          <t-tab-panel label="进度曲线" value="1" class="panel">马吉春</t-tab-panel>
          <t-tab-panel label="其他反馈" value="2" class="panel">马吉春</t-tab-panel>
        </t-tabs>
      </view>
    </view>
  </view>
</view>