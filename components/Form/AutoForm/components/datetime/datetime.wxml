<t-cell
  title="{{item.label}}"
  hover
  note="{{dateText || ''}}"
  arrow
  data-mode="date"
  bindtap="showPicker"
  class="test"
  t-class="pannel-item"
/>

<!-- 年月日 -->
<t-date-time-picker
  wx:if="{{dateVisible}}"
  title="{{item.label}}"
  visible="{{dateVisible}}"
  mode="date"
  defaultValue="{{date}}"
  format="YYYY-MM-DD"
  bindchange="onConfirm"
  bindpick="onColumnChange"
  bindcancel="hidePicker"
  start="{{start}}"
  end="{{end}}"
/>