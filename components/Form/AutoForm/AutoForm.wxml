<view class="form-box-container">
  <!-- 表单标题 -->
  <view wx:if="{{!formInfo.title.disable}}" class="form-title">
    <text style="font-size: 17pt; font-weight: 500;"> {{formInfo.title.value}}</text>
  </view>
  <!-- 表单提示 -->
  <view wx:if="{{!formInfo.notes.disable}}" class="form-notes">
    <text style="font-size: 12pt; font-weight: 200;">{{formInfo.notes.value}}</text>
  </view>

  <view>
    <form bind:submit="submit">
      <view class="form-component" wx:for="{{formInfo.form}}" wx:key="index" wx:if="{{!item.isHide}}">
        
        <!-- input组件 -->
        <t-input label="{{item.label}}" wx:if="{{item.component == 'input'}}" bind:change="handleInput" data-key="{{item.name}}">
         <view slot="prefix-icon"  wx:if="{{item.icon}}" style="height: 100%; display: flex; align-items: center; justify-content: center; padding: 0 3px 0 0;">
          <t-icon size="16px" name="{{item.icon}}"/>
         </view>
        </t-input>

        
        <!-- 验证码 -->
        <Security_Phone bind:return="updateInfo" wx:if="{{item.component == 'security_code'}}" item="{{item}}"></Security_Phone>

        <!-- picker -->
        <Picker bind:return="updateInfo" wx:if="{{item.component == 'picker'}}" item="{{item}}"></Picker>

        <!-- Radio，单选框组件 -->
        <Radio wx:if="{{item.component == 'radio'}}" item="{{item}}"></Radio>

        <!-- upload上传照片 -->
        <Upload wx:if="{{item.component == 'upload' && !item.isHide}}" item="{{item}}" bind:return="updateInfo"></Upload>

        <!-- datetime年月日选择器 -->
        <DateTime wx:if="{{item.component == 'datetime' && !item.isHide}}" item="{{item}}" bind:return="updateInfo"></DateTime>
      </view>
      <view class="register-submit-box">
        <t-button bindtap="submit" style="width:50%;" theme="primary" size="large">{{formInfo.submitTitle}}</t-button>
      </view>
    </form>
  </view>
</view>